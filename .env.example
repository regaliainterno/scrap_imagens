# Google Gemini API Configuration
# Get your API key at: https://aistudio.google.com/app/apikeys
GOOGLE_API_KEY=

# Image Scraper Configuration
# Default save directory for downloaded images
IMAGE_DIR=G:\Meu Drive\CanaL Anunnaki

# Database Configuration
# Path to SQLite database (stores MD5 hashes for duplicate detection)
DB_PATH=anunnakis_roteiros/src/db/roteiros.db

# Image Validation Settings
# Minimum image file size in bytes
MIN_IMAGE_SIZE=1000

# High-resolution mode minimum dimension (pixels)
# Applied when high_res=True in scraper
HIGH_RES_MIN_DIMENSION=1080

# Standard resolution mode minimum dimension (pixels)
# Applied when high_res=False in scraper
STANDARD_RES_MIN_DIMENSION=480

# Scraper Settings
# Multiplier for requests to Bing (e.g., if max_images=10, requests 10*10=100 to compensate for duplicates)
# Capped at 1000 maximum
SCRAPER_REQUEST_MULTIPLIER=10

# Bing Image Crawler Settings
# Search filters (prefer large, photographic images)
BING_IMAGE_FILTERS=size:large,type:photo

# GUI Settings
# Application window title
APP_TITLE=Anunnakis Roteiros - Scraper de Imagens

# Logging
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
